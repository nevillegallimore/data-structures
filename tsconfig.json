{
    "compilerOptions": {
        "alwaysStrict": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "esnext"
        ],
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "outDir": "./dist",
        "pretty": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2020"
    },
    "exclude": [
        "**/node_modules/**",
        "lib/**/*.spec.ts"
    ],
    "include": [
        "lib/**/*.ts"
    ],
    "ts-node": {}
}
